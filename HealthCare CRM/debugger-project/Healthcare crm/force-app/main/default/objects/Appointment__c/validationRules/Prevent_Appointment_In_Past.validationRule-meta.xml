<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Appointment_In_Past</fullName>
    <active>true</active>
    <errorConditionFormula>Appointment_Start__c &lt; NOW()</errorConditionFormula>
    <errorDisplayField>Appointment_Start__c</errorDisplayField>
    <errorMessage>Appointment cannot be scheduled in the past.</errorMessage>
</ValidationRule>
